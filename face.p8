pico-8 cartridge // http://www.pico-8.com
version 16
__lua__
function _init()
    x = 64 
    y = 64
    dx = 0
    dy = 0
    mv = 0
    camx = 0
    camy = 0
    directionLeft=false
end

function setDirection() 
   if (btn(0)) then 
      directionLeft=true
   end

   if(btn(1)) then
      directionLeft=false
   end
end

function moveCamera() 
   if (btn(0)) then 
    camx-=1
   end

   if(btn(1)) then
     camx += 1
   end
end

function _update()
   setDirection()
   moveCamera()
   if (btn(0)) then x=x-1 end
   if (btn(1)) then x=x+1 end
   if (btn(2)) then y=y-1 end
   if (btn(3)) then y=y+1 end
   if (btn(0) or btn(1)) then 
     mv += 5
   end
end

function _draw()
   cls()
   rectfill(camx,camy,camx+127,camy+127,1)
   camera(camx, camy)
   map(0, 0, 0, 0, 128, 32)   
   spr(mv % 4, x, y, 1, 1, directionLeft)
end
